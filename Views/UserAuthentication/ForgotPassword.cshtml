@model Investment1.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 20px;
        }

        .card {
            background-color: #8D493A;
            color: #FFFFFF;
            border-radius: 10px;
        }

        .btn-custom {
            background-color: #F8EDE3;
            color: black;
        }
        .btn-custom:hover{
                background-color: #efdac6;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .img-fluid {
            max-height: 400px;
            object-fit: cover;
            border-radius: 10px;
        }

        .alert {
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-10 mt-5">
                <div class="row">
                    <div class="col-md-6 d-none d-md-block">
                        <!-- Left Side with Illustration Image -->
                        <img src="~/images/Forgotpass.svg" alt="Forgot Password" class="img-fluid">
                    </div>
                    <div class="col-md-6">
                        <!-- Right Side with Forgot Password Form -->
                        <div class="card">
                            <div class="card-header">
                                <h2 class="text-center">Forgot Password</h2>
                            </div>
                            <div class="card-body">
                                <form asp-action="ForgotPassword" method="post">
                                    <div class="form-group">
                                        <label asp-for="Email"></label>
                                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-custom">Send OTP</button>
                                    </div>
                                </form>

                                @if (TempData["ErrorMessage"] != null)
                                {
                                    <div class="alert alert-danger mt-3">
                                        @TempData["ErrorMessage"]
                                    </div>
                                }

                                @if (TempData["SuccessMessage"] != null)
                                {
                                    <div class="alert alert-success mt-3">
                                        @TempData["SuccessMessage"]
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
