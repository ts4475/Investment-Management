@model Investment1.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 30px;
        }

        .image-container img {
            max-width: 100%;
            border-radius: 10px;
            height: auto;
        }

        .btn-custom {
            background-color: #8D493A;
            color: #FFFFFF;
        }

            .btn-custom:hover {
                background-color: #6c3f28;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <!-- Image Section -->
            <div class="col-md-4">
                <div class="image-container">
                    <img src="~/images/Forgotpass.svg" alt="Reset Password Image">
                </div>
            </div>
            <!-- Form Section -->
            <div class="col-md-8">
                <h2>Reset Password</h2>
                <form asp-action="ResetPassword" method="post">
                    <div class="form-group">
                        <label asp-for="Otp" class="form-label"></label>
                        <input asp-for="Otp" class="form-control" />
                        <span asp-validation-for="Otp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="form-label"></label>
                        <input asp-for="NewPassword" type="password" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-custom">Reset Password</button>
                    </div>
                </form>

                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger mt-3">
                        @TempData["ErrorMessage"]
                    </div>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success mt-3">
                        @TempData["SuccessMessage"]
                    </div>
                }

                @section Scripts {
                    @{
                        await Html.RenderPartialAsync("_ValidationScriptsPartial");
                    }
                }
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
