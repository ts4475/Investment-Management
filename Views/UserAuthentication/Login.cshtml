@model Investment1.Models.LoginViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10 mt-5">
            <div class="row">
                <div class="col-md-6 d-none d-md-block">
                    <!-- Left Side with Illustration Image -->
                    <img src="~/images/Login-anime.gif" alt="Illustration" class="img-fluid" style="max-height: 400px;">
                </div>
                <div class="col-md-6">
                    <!-- Right Side with Login Form -->
                    <div class="card" style="background-color: #8D493A; color: #FFFFFF;">
                        <div class="card-header">
                            <h2 class="text-center">Login</h2>
                        </div>
                        <div class="card-body">
                            <form asp-action="Login" method="post">
                                <div class="form-group">
                                    <label asp-for="Email"></label>
                                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <br />
                                <div class="form-group">
                                    <button type="submit" class="btn" style="background-color: #F8EDE3; color: #000000;">Login</button>
                                </div>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </form>

                            <div class="mt-3">
                                <a asp-action="ForgotPassword" class="btn" style="color: #FFFFFF;">Forgot Password?</a>
                            </div>

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert" style="background-color: #F8EDE3; color: #000000;">
                                    @TempData["SuccessMessage"]
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}