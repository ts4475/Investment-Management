@model Investment1.Models.SupportViewModel
@{
    ViewData["Title"] = "Create Support Ticket";
}
<br />
<h2 style="text-align: center;">Create Support Ticket</h2>
<form asp-action="Create" method="post">
 
    <div style="
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        ">
<div class="image-container" style="
                flex: 1;
                margin-left: 20px;
                margin-right:0px;
            ">
<img src="/images/Support Image.svg" alt="support image" class="support-image" style="
                    max-width: 70%;
                    height: 70%;
                ">
</div>
 
        <div class="form-container" style="
                flex: 2;
                margin-right: 200px;
                max-width: 600px;
                width: 100%;
            ">
<div class="form-group"><br /><br /><br />
<label asp-for="Subject" class="control-label"></label>
<input asp-for="Subject" class="form-control" />
<span asp-validation-for="Subject" class="text-danger"></span>
</div>
<div class="form-group">
<label asp-for="Description" class="control-label"></label>
<textarea asp-for="Description" class="form-control"></textarea>
<span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group d-flex justify-content-between align-items-center">
<!-- Submit Button -->
<button type="submit" class="btn" style="background-color: #8D493A; color: #FFFFFF">Submit</button>
<!-- Hyperlink styled as text, aligned to the right -->
<a asp-action="Index" asp-controller="Support" class="text" style="text-decoration: underline; color: #000000">View Old Tickets</a>
</div>
</div>
</form>