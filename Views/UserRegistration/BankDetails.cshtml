@model Investment1.ViewModels.BankDetailsViewModel

@{
    ViewData["Title"] = "Bank Details";
}

<h2>Bank Details</h2>

<form asp-action="BankDetails" method="post">
    <div class="form-group">
        <label asp-for="AccountNo" class="control-label"></label>
        <input asp-for="AccountNo" class="form-control" />
        <span asp-validation-for="AccountNo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IFSCCode" class="control-label"></label>
        <input asp-for="IFSCCode" class="form-control" />
        <span asp-validation-for="IFSCCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PAN" class="control-label"></label>
        <input asp-for="PAN" class="form-control" />
        <span asp-validation-for="PAN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Aadhaar" class="control-label"></label>
        <input asp-for="Aadhaar" class="form-control" />
        <span asp-validation-for="Aadhaar" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <button type="submit" class="btn" style="background-color: #8D493A; color: #FFFFFF">Submit</button>
    </div>
</form>
