@model Investment1.ViewModels.PersonalDetailsViewModel

@{
    ViewData["Title"] = "Personal Details";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="PersonalDetails" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DOB"></label>
        <input asp-for="DOB" type="date" class="form-control" />
        <span asp-validation-for="DOB" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mobile"></label>
        <input asp-for="Mobile" class="form-control" />
        <span asp-validation-for="Mobile" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <textarea asp-for="Address" class="form-control"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PIN"></label>
        <input asp-for="PIN" class="form-control" />
        <span asp-validation-for="PIN" class="text-danger"></span>
    </div>
    <button type="submit" class="btn" style="background-color: #8D493A; color: #FFFFFF">Next</button>
</form>

<a href="@Url.Action("BasicUser")" style="color: #000000">Back</a>
