@model Investment1.ViewModels.BasicUserViewModel

@{
    ViewData["Title"] = "Sign Up";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Groww</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .password-requirements {
            color: #F8EDE3;
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        .invalid-feedback {
            color: #FFFFFF; /* Changed from red to white */
            display: block;
        }
    </style>
</head>
<body style="background-color: #8D493A; color: #FFFFFF;">
    <main role="main" class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-10 mt-5">
                <div class="row">
                    <div class="col-md-6 d-none d-md-block">
                        <!-- Left Side with Illustration Image -->
                        <img src="~/images/Signup-anime.gif" alt="Illustration" class="img-fluid" style="max-height: 500px;">
                    </div>
                    <div class="col-md-6">
                        <!-- Right Side with Sign Up Form -->
                        <div class="card" style="background-color: #8D493A; color: #FFFFFF;">
                            <div class="card-header text-center">
                                <h2>@ViewData["Title"]</h2>
                            </div>
                            <div class="card-body">
                                <form asp-action="BasicUser" method="post">
                                    <div class="form-group">
                                        <label asp-for="Email" style="color: #FFFFFF;"></label>
                                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password" style="color: #FFFFFF;"></label>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password"
                                               id="Password" required
                                               data-val-required="Password is required"
                                               data-val-regex="Password must be at least 6 characters long, contain at least one uppercase letter, and one special character."
                                               data-val-regex-pattern="^(?=.*[A-Z])(?=.*[\W_]).{6,}$" />
                                        <span id="passwordHelp" class="invalid-feedback"></span>
                                    </div>
                                    <button type="submit" class="btn" style="background-color: #F8EDE3; color: #000000;">Next</button>
                                </form>
                                <div class="mt-3 text-center">
                                    <a href="@Url.Action("Login", "UserAuthentication")" style="color: #FFFFFF;">Already have an account? Login</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.4.4/cjs/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        document.getElementById('Password').addEventListener('input', function () {
            var password = this.value;
            var message = '';

            // Regular expressions for validation
            var lengthCheck = /.{6,}/;
            var uppercaseCheck = /[A-Z]/;
            var specialCharCheck = /[\W_]/;

            // Collect messages based on validation
            if (!lengthCheck.test(password)) {
                message = '<p>Password must be at least 6 characters long.</p>';
            }
            if (!uppercaseCheck.test(password)) {
                message += '<p>Password must contain at least one uppercase letter.</p>';
            }
            if (!specialCharCheck.test(password)) {
                message += '<p>Password must contain at least one special character.</p>';
            }
            document.getElementById('passwordHelp').innerHTML = message;
            document.getElementById('passwordHelp').style.display = message ? 'block' : 'none';
        });
    </script>
</body>
</html>
